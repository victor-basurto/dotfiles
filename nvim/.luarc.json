{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "Lua.runtime.version": "LuaJIT",
  "Lua.diagnostics.globals": [
    "vim",
    "require",
    "use",
    "packer_plugins",
    "LazyVim",
    "MiniHipatterns",
    "cmp",
    "snacks"
  ],
  "Lua.workspace.library": [
    "${3rd}/luv/library",
    "${3rd}/busted/library",
    "${3rd}/luassert/library",
    "${3rd}/luafilesystem/library",
    "${workspaceFolder}",
    "${3rd}/neovim/runtime"
  ],
  "Lua.workspace.checkThirdParty": false,
  "Lua.workspace.maxPreload": 1000,
  "Lua.workspace.preloadFileSize": 100,
  "Lua.workspace.ignoreDir": [
    ".git",
    "node_modules",
    "dist",
    "build",
    "venv",
    "__pycache__",
    "target",
    ".next"
  ],
  "Lua.workspace.exclude": [
    "**/AppData",
    "**/Downloads",
    "**/Documents",
    "**/OneDrive",
    "**/Desktop",
    "**/Pictures",
    "**/Videos",
    "**/Music",
    "${env:USERPROFILE}"
  ],
  "Lua.workspace.maxWorkspaceFiles": 5000
}
